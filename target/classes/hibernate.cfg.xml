<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/SearchNode</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">root</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="connection.pool_size">1</property>
        <property name="hibernate.connection.autocommit">false</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="current_session_context_class">thread</property>
        <property name="format_sql">true</property>
        <property name="hibernate.jdbc.time_zone">UTC</property>
        <!--        <property name="hibernate.jdbc.batch_size">10</property>-->
        <property name="hibernate.order_inserts">true</property>
        <mapping class="org.ahmeteminsaglik.entity.Record"/>
        <mapping class="org.ahmeteminsaglik.entity.DataStructor"/>
        <mapping class="org.ahmeteminsaglik.entity.DataStructorProcess"/>
        <mapping class="org.ahmeteminsaglik.entity.SortAlgorithmProcess"/>
        <mapping class="org.ahmeteminsaglik.entity.SearchAlgorithmProcess"/>
        <mapping class="org.ahmeteminsaglik.entity.WordProcess"/>
        <mapping class="org.ahmeteminsaglik.entity.WordList"/>
        <mapping class="org.ahmeteminsaglik.entity.Complexity"/>
        <mapping class="org.ahmeteminsaglik.entity.ProcessName"/>

    </session-factory>
</hibernate-configuration>
